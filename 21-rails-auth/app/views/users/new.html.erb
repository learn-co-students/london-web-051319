<% if flash[:errors] %>
    <div class="errors">
        <h4>Oops!</h4>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
    </div>
<% end %>
<h1>Sign up</h2>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
<% end %>
