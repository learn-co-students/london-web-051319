<h2>edit this sushi</h2>

<form action="/sushis/<%= @sushi.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div>
        <label for="name">Enter your sushi name: </label>
        <input type="text" name="sushi[name]" id="name" value="<%= @sushi.name %>" >
    </div>
    <div>
        <label for="price">Enter your sushi price: </label>
        <input type="number" name="sushi[price]" id="price" step="0.01" value="<%= @sushi.price %>">
    </div>
    <div>
        <% @ingredients_for_checkboxes.each do |ingredient| %>
            <input type="checkbox" id="ingredient-<%= ingredient.id %>" name="sushi[ingredient_ids][]" value="<%= ingredient.id %>" <%= @sushi.ingredient_ids.include?(ingredient.id) ? 'checked' : '' %>>
            <label for="ingredient-<%= ingredient.id %>"><%= ingredient.name %></label>
        <% end %>
    </div>
    <input type="submit">
</form>
<form action="/sushis/<%= @sushi.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete this sushi">
</form>