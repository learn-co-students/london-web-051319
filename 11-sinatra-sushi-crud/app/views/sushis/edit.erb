<h2>edit this sushi</h2>

<form action="/sushis/<%= @sushi.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div>
        <label for="name">Enter your sushi name: </label>
        <input type="text" name="name" id="name" value="<%= @sushi.name %>" >
    </div>
    <div>
        <label for="price">Enter your sushi price: </label>
        <input type="number" name="price" id="price" step="0.01" value="<%= @sushi.price %>">
    </div>
    <div>
        <label for="fish">Enter your sushi fish: </label>
        <input type="text" name="fish" id="fish" value="<%= @sushi.fish %>">
    </div>
    <input type="submit">
</form>
<form action="/sushis/<%= @sushi.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete this sushi">
</form>